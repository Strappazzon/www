{
	"[liquid]": {
		"editor.defaultFormatter": null,
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[json][jsonc]": {
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
		"editor.insertSpaces": true,
		"editor.quickSuggestions": {
			"other": "off"
		},
		"editor.tabSize": 2,
		"files.trimTrailingWhitespace": false
	},
	"[plaintext][txt]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.insertFinalNewline": false,
		"files.trimTrailingWhitespace": false
	},
	"[ruby]": {
		"editor.defaultFormatter": "Shopify.ruby-lsp",
		"editor.insertSpaces": true,
		"editor.rulers": [
			160
		],
		"editor.tabSize": 2,
		"files.eol": "\n"
	},
	"[scminput]": {
		"editor.rulers": [
			70
		]
	},
	"[scss]": {
		"editor.codeActionsOnSave": {
			"source.fixAll": "never",
			"source.fixAll.stylelint": "always"
		},
		"editor.defaultFormatter": "stylelint.vscode-stylelint",
		"editor.formatOnPaste": true,
		"editor.formatOnSave": false,
		"editor.insertSpaces": true,
		"editor.rulers": [
			160
		],
		"editor.tabSize": 2
	},
	"[shellscript]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.eol": "\n"
	},
	"[xml]": {
		"editor.defaultFormatter": null
	},
	"[xml][yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"editor.defaultFormatter": null,
	"editor.detectIndentation": false,
	"editor.rulers": [],
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		".stylelintrc.yml": ".stylelintignore,.stylelintcache",
		"Gemfile": "Gemfile.lock",
		"package.json": "package-lock.json"
	},
	"files.associations": {
		"**/.cloudflare/_*": "plaintext",
		"**/.vscode/*.code-snippets": "json",
		"*.html": "liquid"
	},
	"files.exclude": {
		".bundle": true,
		".frontmatter": true,
		".jekyll-cache": true,
		"*.swp": true,
		"_site*": true,
		"node_modules": true
	},
	"files.insertFinalNewline": true,
	"files.readonlyInclude": {
		".ruby-lsp/**/*": true,
		"_site/**/*.*": true,
		"node_modules/**/*.*": true,
		".stylelintcache": true,
		"Gemfile.lock": true,
		"**/LICENSE*": true,
		"package-lock.json": true
	},
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"git.inputValidation": true,
	"git.inputValidationLength": 70,
	"git.inputValidationSubjectLength": 70,
	"javascript.format.insertSpaceAfterConstructor": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"javascript.format.semicolons": "insert",
	"javascript.preferences.quoteStyle": "single",
	"json.schemas": [
		{
			"fileMatch": [
				"frontmatter.json"
			],
			"url": "https://frontmatter.codes/frontmatter.schema.json"
		}
	],
	"liquid.config.method": "workspace",
	"liquid.engine": "jekyll",
	"markdown.validate.enabled": false,
	"rubyLsp.formatter": "rubocop",
	"search.exclude": {
		"**/.frontmatter": true,
		"**/.jekyll-cache": true,
		"**/.ruby-lsp": true,
		"**/_site": true,
		"**/node_modules": true
	},
	"scss.validate": false,
	"stylelint.snippet": [
		"scss",
		"sass"
	],
	"stylelint.validate": [
		"scss",
		"sass"
	],
	"svg.preview.background": "transparent",
	"terminal.integrated.defaultProfile.windows": "WSL",
	"terminal.integrated.profiles.windows": {
		"WSL": {
			"icon": "terminal-linux",
			"path": "${env:windir}\\system32\\wsl.exe"
		}
	},
	"yaml.schemas": {
		"https://json.schemastore.org/github-issue-config.json": ".github/ISSUE_TEMPLATE/config.yml"
	}
}
