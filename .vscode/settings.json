{
	"[html]": {
		"editor.defaultFormatter": null
	},
	"[liquid]": {
		"editor.defaultFormatter": null
	},
	"[markdown]": {
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		},
		"files.trimTrailingWhitespace": false
	},
	"[scss]": {
		"editor.defaultFormatter": null
	},

	"cssrem.autoRemovePrefixZero": false,
	"cssrem.fixedDigits": 3,
	"cssrem.rootFontSize": 14,

	"files.associations": {
		"**/.cloudflare/_*": "plaintext",
		"*.html": "liquid",
	},
	"files.exclude": {
		".bundle": true,
		".jekyll-cache": true,
		"_site*": true,
		"vendor/**": true,
		"**/debug.log": true,
		"Gemfile.lock": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"frontMatter.framework.startCommand": "bundle exec jekyll serve --force_polling --livereload",

	"markdown.preview.scrollEditorWithPreview": false
}
