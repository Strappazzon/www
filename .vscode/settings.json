{
	"[html]": {
		"editor.defaultFormatter": null,
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[liquid]": {
		"editor.defaultFormatter": null,
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		},
		"editor.detectIndentation": false,
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"files.trimTrailingWhitespace": false
	},
	"[plaintext]": {
		"files.insertFinalNewline": false,
		"files.trimTrailingWhitespace": false,
		"editor.detectIndentation": false,
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[scss]": {
		"editor.defaultFormatter": null
	},
	"[txt]": {
		"files.insertFinalNewline": false,
		"files.trimTrailingWhitespace": false,
		"editor.detectIndentation": false,
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
	},
	"[yaml]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},

	"cssrem.autoRemovePrefixZero": false,
	"cssrem.fixedDigits": 3,
	"cssrem.rootFontSize": 14,

	"files.associations": {
		"**/.cloudflare/_*": "plaintext",
		"*.html": "liquid",
	},
	"files.exclude": {
		".bundle": true,
		".jekyll-cache": true,
		"_site*": true,
		"vendor/**": true,
		"**/debug.log": true,
		"Gemfile.lock": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"frontMatter.framework.startCommand": "bundle exec jekyll serve --force_polling --livereload",

	"markdown.preview.scrollEditorWithPreview": false,
	"markdownlint.config": {
		"MD013": false,
		"MD025": false,
		"MD026": false,
		"MD033": false,
		"MD041": false
	}
}
