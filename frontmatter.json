{
	"$schema": "https://frontmatter.codes/frontmatter.schema.json",
	"frontMatter.content.autoUpdateDate": true,
	"frontMatter.content.pageFolders": [
		{
			"excludeSubdir": true,
			"path": "[[workspace]]/_blog",
			"title": "Blog"
		}
	],
	"frontMatter.content.publicFolder": "[[workspace]]/static/blog",
	"frontMatter.content.supportedFileTypes": [
		"md"
	],
	"frontMatter.framework.id": "jekyll",
	"frontMatter.framework.startCommand": "bundle exec jekyll serve --force_polling --livereload",
	"frontMatter.preview.host": "http://localhost:4000",
	"frontMatter.preview.pathName": "/blog/",
	"frontMatter.taxonomy.contentTypes": [
		{
			"fields": [
				{
					"default": "blog",
					"editable": false,
					"name": "layout",
					"single": true,
					"title": "Layout",
					"type": "string"
				},
				{
					"name": "title",
					"required": true,
					"single": true,
					"title": "Title",
					"type": "string"
				},
				{
					"name": "description",
					"required": true,
					"single": true,
					"title": "Description",
					"type": "string"
				},
				{
					"default": "{{now}}",
					"isPublishDate": true,
					"name": "date",
					"required": true,
					"title": "Publishing date",
					"type": "datetime"
				},
				{
					"isModifiedDate": true,
					"name": "last_modified_at",
					"required": true,
					"title": "Modified date",
					"type": "datetime"
				},
				{
					"name": "tags",
					"required": false,
					"single": false,
					"title": "Tags",
					"type": "categories"
				}
			],
			"name": "default",
			"pageBundle": false,
			"previewPath": "/blog/"
		}
	],
	"frontMatter.templates.prefix": ""
}
