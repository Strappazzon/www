{
	"$schema": "https://frontmatter.codes/frontmatter.schema.json",

	"frontMatter.preview.host": "http://localhost:4000",
	"frontMatter.preview.pathName": "/blog/",
	"frontMatter.framework.id": "jekyll",
	"frontMatter.content.pageFolders": [
		{
			"title": "Blog",
			"path": "[[workspace]]/_blog",
			"excludeSubdir": true
		}
	],
	"frontMatter.content.publicFolder": "[[workspace]]/static/blog",
	"frontMatter.content.supportedFileTypes": [
		"md"
	],
	"frontMatter.content.autoUpdateDate": true,
	"frontMatter.templates.prefix": "",

	"frontMatter.taxonomy.contentTypes": [
		{
			"name": "default",
			"pageBundle": false,
			"previewPath": "/blog/",
			"fields": [
				{
					"title": "Title",
					"name": "title",
					"type": "string"
				},
				{
					"title": "Description",
					"name": "description",
					"type": "string"
				},
				{
					"title": "Publishing date",
					"name": "date",
					"type": "datetime",
					"default": "{{now}}",
					"isPublishDate": true
				},
				{
					"title": "Modified date",
					"name": "last_modified_at",
					"type": "datetime",
					"isModifiedDate": true
				},
				{
					"title": "Keywords",
					"name": "keywords",
					"type": "tags"
				}
			]
		}
	]
}
